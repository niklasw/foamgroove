FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      omega;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "$FOAM_CASE/simpleSetup.in"

dimensions      [ 0 0 -1 0 0 0 0 ];

internalField   uniform $initialOmega;

boundaryField
{
    ".*"
    {
        type            omegaWallFunction;
        Cmu             0.09;
        kappa           0.41;
        E               9.8;
        beta1           0.075;
        value           $internalField;
    }
    ".*[Ii]nlet.*"
    {
        type            turbulentMixingLengthFrequencyInlet;
        mixingLength    $turbulentLengthScale;
        k               k;
        value           $internalField;
    }
    ".*[Oo]utlet.*"
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;
    }
    ".*[Oo]pening.*"
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;
    }

#   include             "include/general.in"
#   includeIfPresent    "include/freeStream.in"
}


