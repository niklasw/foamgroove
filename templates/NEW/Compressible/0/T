FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "${FOAM_CASE}/setup.foam";

dimensions      [ 0 0 0 1 0 0 0 ];

internalField   uniform $temperature.reference;

boundaryField
{
    #includeEtc "caseDicts/setConstraintTypes";

    inlet
    {
        type fixedValue;
        value $internalField;
    }

    wall
    {
        type zeroGradient;
    }

    outlet
    {
        type inletOutlet;
        inletValue $internalField;
        value uniform 0;
    }

    farfield
    {
        type freestream;
        freestreamValue $internalField;
    }

}

