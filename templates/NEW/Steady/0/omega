FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      omega;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "${FOAM_CASE}/setup.foam";

dimensions      [ 0 0 -1 0 0 0 0 ];

internalField   $turbulence.initialOmega;

boundaryField
{
    #includeEtc "caseDicts/setConstraintTypes"

    inletGroup
    {
        type fixedValue;
        value $internalField;
    }

    wallGroup
    {
        type omegaWallFunction;
        value $internalField;
        $:turbulence.constants;
    }

    slipGroup
    {
        type slip;
    }

    movingWallGroup
    {
        $wallGroup;
    }

    outflowGroup
    {
        type inletOutlet;
        inletValue $internalField;
        value uniform 0;
    }

    ambienceGroup
    {
        $outflowGroup;
    }

    farfieldGroup
    {
        type freestream;
        freestreamValue $internalField;
    }
}

// ************************************************************************* //
