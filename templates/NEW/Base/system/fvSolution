FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#includeEtc     "FOIDefaults/fvSolution"
#include        "${FOAM_CASE}/setup.foam"

solvers
{
    p
    {
        $gamg;
    }

    U
    {
        $pbicg;
    }

    "(k|epsilon|omega|nuTilda)"
    {
        $pbicg;
    }

    /* For transient solvers */
    pFinal
    {
        $p;
        relTol 0;
    }

    UFinal
    {
        $U;
        relTol 0;
    }

    "(k|epsilon|omega|nuTilda)Final"
    {
        $pbicg;
    }

    Phi
    {
        $p;
    }

    cellDisplacement
    {
        $gamg;
        tolerance   1e-6;
        relTol      0;
    }
}

// Macro variable for use in all methods below
referencePressure
{
    pRefCell                    0;
    pRefValue                   $:pressure.reference;
}

SIMPLE
{
    nNonOrthogonalCorrectors    1;
    $referencePressure;

    residualControl
    {
        p                       1e-4;
        U                       1e-4;
        "(k|epsilon|omega)"     1e-3;
    }

}

potentialFlow
{
    nNonOrthogonalCorrectors    20;
    $referencePressure;
}

PISO
{
    nCorrectors                 2;
    nNonOrthogonalCorrectors    2;
    $referencePressure;
}

PIMPLE
{
    nOuterCorrectors            1;
    nCorrectors                 3;
    nNonOrthogonalCorrectors    1;
    $referencePressure;
}

relaxationFactors
{
    fields
    {
        p                           0.3;
    };
    equations
    {
        U                           0.7;
        "(k|epsilon|omega|nuTilda)" 0.5;
    }
}

// ************************************************************************* //
