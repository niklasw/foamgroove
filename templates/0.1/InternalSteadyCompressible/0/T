FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "${FOAM_CASE}/simpleSetup.in"

dimensions      [ 0 0 0 1 0 0 0 ];

internalField   uniform $initialTemperature;

boundaryField
{
    ".*"
    {
        type            zeroGradient;
    }
    "procBoundary.*"
    {
        type            processor;
        value           $internalField;
    }
    ".*[Ii]nlet.*"
    {
        type            fixedValue;
        value           uniform $inletTemperature;
    }
    ".*[Oo]utlet.*"
    {
        type            inletOutlet;
        value           $internalField;
        inletValue      $initialTemperature;
    }
    ".*[Oo]pening.*"
    {
        type            inletOutlet;
        inletValue      $initialTemperature;
        value           $internalField;
    }
#    include   "${FOAM_CASE}/system/commonPatches.in"
}


// ************************************************************************* //
