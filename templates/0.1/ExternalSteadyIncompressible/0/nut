FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "$FOAM_CASE/simpleSetup.in"

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    ".*"
    {
        type            calculated;
    }
    ".*[Ww]all.*"
    {
        type                nutURoughWallFunction;
        roughnessHeight     $wallRoughnessHeight;
        roughnessConstant   0.5;
        roughnessFactor     1;
        value               $internalField;
    }
#   include "include/commonPatches.in"
#   include "include/freeStream.in"
}


