#include "${FOAM_CASE}/constant/boundaryConditions/basic";

dimensions      [ 0 0 1 0 0 0 0 ];

internalField   $energy.initialTemperature;

boundaryField
{
#   include "${WM_PROJECT_DIR}/etc/caseDicts/setConstraintTypes";

    defaultGroup { $:bc.default.T }

    inletGroup { $:bc.fixedInlet.T; }

    wallGroup { $:bc.walls.T; }

    slipGroup       { $:bc.slipWalls.T; }

    movingWallGroup { $:bc.walls.T; }

    ambienceGroup { $:bc.totalPressure.T; }

    outflowGroup { $:bc.pressureOutlet.T; }

    farfieldGroup { $:bc.freestream.T; }

#   include "include/general.in";
}

