FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    note        "mesh decomposition control dictionary";
    object      decomposeParDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

numberOfSubdomains  12;

method          scotch;

multiLevelCoeffs
{
    level0
    {
        numberOfSubdomains  64;
        method scotch;
    }
    level1
    {
        numberOfSubdomains  4;
        method scotch;
    }
}

